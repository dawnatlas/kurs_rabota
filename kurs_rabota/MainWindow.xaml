        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Menu>
            <MenuItem x:Name="Bank" Header="Банки" Click="Bank_OnClick"></MenuItem>
